@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-12 col-sm-12 col-md-7">
        <div class="widget p-3 p-md-5" style="background-color:#212b36">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="Username" placeholder="Username" ejs-for="Username"
                                 floatLabelType="Always" multiline="false"></ejs-textbox>
                </div>
                <div class="mb-3">
                    <ejs-textbox type="password" id="Password" placeholder="Password" ejs-for="Password"
                                 floatLabelType="Always" multiline="false"></ejs-textbox>
                </div>
                <div class="mb-3">
                    <ejs-checkbox ejs-for="RememberMe" id="rememberMe" cssClass="e-success" label="Remember me?" checked="false"></ejs-checkbox>
                </div>
                <ejs-button id="submit" type="submit" content="LOGIN" cssClass="btn btn-login"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-12 col-sm-12 col-md-5 usersWidget">
        <div class="widget h-100 d-flex justify-content-center align-items-center p-3 p-md-0">
            <i class="fa-solid fa-users fa-3x fa-md-2xl"></i>
        </div>
    </div>
</div>